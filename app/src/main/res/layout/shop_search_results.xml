<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border"
    android:padding="30dp">

    <TextView
        android:id="@+id/creditcard_benefit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/hint_creditcard"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/card_image_benefit"
        android:layout_width="139dp"
        android:layout_height="109dp"
        android:layout_gravity="center"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/creditcard_benefit"
        app:srcCompat="@drawable/ic_7_bank_norwegian_kortet"
        tools:src="@drawable/ic_7_bank_norwegian_kortet" />

    <TextView
        android:id="@+id/creditcard_benefit_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_image_benefit" />

    <TextView
        android:id="@+id/benefit_name"
        android:layout_width="168dp"
        android:layout_height="126dp"
        android:background="@drawable/rounded_corner"
        android:padding="5dp"
        android:text="@string/benefit"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.986"
        app:layout_constraintStart_toEndOf="@id/card_image_benefit"
        app:layout_constraintTop_toBottomOf="@id/creditcard_benefit"
        app:layout_constraintVertical_bias="0.515" />


</androidx.constraintlayout.widget.ConstraintLayout>