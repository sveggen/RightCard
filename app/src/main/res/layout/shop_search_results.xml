<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border"
    android:padding="30dp">

    <TextView
        android:id="@+id/creditcard_benefit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Credit card name"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/card_image_benefit"
        android:layout_width="132dp"
        android:layout_height="101dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/creditcard_benefit"
        app:srcCompat="@drawable/ic_7_bank_norwegian_kortet"
        tools:src="@drawable/ic_7_bank_norwegian_kortet" />

    <TextView
        android:id="@+id/benefit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefit name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/creditcard_benefit"
        app:layout_constraintBottom_toTopOf="@id/benefitDiscount"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/benefitDiscount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Benefit discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_image_benefit"
        app:layout_constraintTop_toTopOf="@id/card_image_benefit" />



</androidx.constraintlayout.widget.ConstraintLayout>